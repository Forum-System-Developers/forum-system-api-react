{
    "version": "0.2.0",
    "configurations": [
        
        
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "forum_system_api.main:app",
                "--reload"
            ],
            "justMyCode": true
        },

        {"name": "Chrome",
        "type": "chrome",            
        "request": "launch",            
        "url": "http://localhost:3000",            
        "webRoot": "${workspaceFolder}/frontend/src",            
        "sourceMaps": true}
    ]
}